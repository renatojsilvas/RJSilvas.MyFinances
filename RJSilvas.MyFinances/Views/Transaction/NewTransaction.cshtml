@model Account
@{
    ViewData["Title"] = "New Transaction";
}

<div> 
    @using (Html.BeginForm("AddNewTransaction", "Transaction", FormMethod.Post))
    {
    <div class="form-group">
        <label>Data</label>
        <input type="date" class="form-control" name="date" placeholder="Date">
    </div>
    <div class="form-group">
        <label>Categoria</label>
        <input type="text" class="form-control" name="category" placeholder="Category">
    </div>
    <div class="form-group">
        <label>Valor</label>
        <input type="number" class="form-control" name="value" placeholder="Value">
    </div>
    <button type="submit" class="btn btn-primary" onclick="">Add</button>
    }
</div>
